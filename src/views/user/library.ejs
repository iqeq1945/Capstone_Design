<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />
  </head>
  <body>
    <%- include('../partials/nav') %>
    <div class="container">
      <div class="mx-auto" style="max-width: 850px; margin-top: 100px">
        <h3>서재</h3>
      </div>
      <div class="d-flex mx-auto border-bottom" style="max-width: 700px">
        <small class="mt-5"><%= data.length %>개</small>
      </div>
      <div
        class="d-flex flex-column align-items-center mx-auto my-5"
        style="max-width: 700px"
      >
        <% data.forEach(function(ele,idx){%>

        <div
          class="d-flex align-items-center px-3 py-2 bg_gray border"
          style="height: 150px; width: 100%; cursor: pointer"
          onclick="location.href='/novels/<%= ele.novel.id %>'"
        >
          <img
            src="<%= ele.novel.image %>"
            height="100%"
            alt=""
            target="_blank"
            style="border-radius: 15px"
          />
          <div class="d-flex flex-column flex-grow-1 ms-3">
            <h5 class="ms-3"><%= ele.novel.title %></h5>
            <span class="ms-3"
              ><%= ele.novel.category %> - <%= ele.novel.cycle %>
            </span>
            <span class="ms-3"><%= ele.novel.author.name %></span>
            <span class="ms-3"
              ><%= ele.novel.updatedAt.toLocaleDateString() %></span
            >
          </div>
          <span>이어보기</span>
          <span class="material-symbols-outlined"> chevron_right </span>
        </div>

        <% }); %>
      </div>
    </div>
  </body>
</html>
